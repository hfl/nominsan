<p id="notice"><%= notice %></p>

<h1>Alternative Titles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Alternative title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alternative_titles.each do |alternative_title| %>
      <tr>
        <td><%= alternative_title.title %></td>
        <td><%= alternative_title.alternative_title %></td>
        <td><%= link_to 'Show', alternative_title %></td>
        <td><%= link_to 'Edit', edit_alternative_title_path(alternative_title) %></td>
        <td><%= link_to 'Destroy', alternative_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alternative Title', new_alternative_title_path %>
