<p id="notice"><%= notice %></p>

<h1>Formats</h1>

<table>
  <thead>
    <tr>
      <th>Format mime</th>
      <th>Format extent</th>
      <th>Scan resolution</th>
      <th>Literature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formats.each do |format| %>
      <tr>
        <td><%= format.format_mime %></td>
        <td><%= format.format_extent %></td>
        <td><%= format.scan_resolution %></td>
        <td><%= format.literature %></td>
        <td><%= link_to 'Show', format %></td>
        <td><%= link_to 'Edit', edit_format_path(format) %></td>
        <td><%= link_to 'Destroy', format, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

